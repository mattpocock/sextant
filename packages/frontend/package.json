{
  "name": "@sextant-tools/frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "scripts": {
    "start": "concurrently \"craco start\" \"npm run codegen\" \"npm run start:api\"",
    "start:api": "ts-node-dev -T --project tsconfig.server.json src/bin/server/devServer.ts",
    "build": "(cd ../../ && yarn build) && craco build",
    "build:api": "tsc --project tsconfig.server.build.json",
    "test": "craco test",
    "codegen": "xstate-codegen \"./!(node_modules)/**/**.machine.ts\"",
    "prepublishOnly": "npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^5.7.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/classnames": "^2.2.11",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@xstate/react": "^1.0.1",
    "classnames": "^2.2.6",
    "graphql": "^15.3.0",
    "immer": "^7.0.9",
    "react": "16.13.1",
    "react-ace": "^9.1.4",
    "react-contenteditable": "^3.3.5",
    "react-dom": "16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3",
    "tailwindcss": "^1.8.10",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3",
    "uuid": "^8.3.0",
    "xstate": "^4.13.0"
  }
}
